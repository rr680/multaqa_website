{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": [
      "docker-compose.yml",
      "Dockerfile.backend",
      "Dockerfile.frontend",
      "nginx.conf"
    ]
  },
  "deploy": {
    "startCommand": "docker-compose up",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/",
    "healthcheckTimeout": 5,
    "healthcheckInterval": 5,
    "port": 3000
  }
}
